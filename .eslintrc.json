{
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "semi": [2, "never"],
                "quotes": ["warn", "double"],
                "no-var": ["error"]
            }
        ]
    }
}
